includeConfig 'config/params.config'
includeConfig 'config/resources.config'
includeConfig 'config/reports.config'

// Workdir for temporary data
workDir = "${baseDir}/tmp_CELIA/$params.projectName"


// Git informations of workflow
manifest {
    homePage = 'https://gitlab.ifremer.fr/bioinfo/CELIA'
    description = 'automatiC gEnome assembLy marIne prokAryotes workflow developped by Ifremer SeBiMER team'
    defaultBranch = 'master'
    author = 'Alexandre Cormier'
    mainScript = 'CELIA.nf'
    name = 'CELIA'
}

// Define env variable that will be accessible in nextflow tasks
env {
    TMPDIR = "$SCRATCH"
}

